<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/main_padding_horizontal"
    android:paddingTop="@dimen/main_padding_top"
    android:paddingBottom="@dimen/main_padding_bottom"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="@dimen/main_text_size" />

    <Button
        android:id="@+id/button_search"
        style="@style/MainButton"
        android:text="@string/search"
        app:icon="@drawable/search_icon" />

    <Button
        android:id="@+id/button_media"
        style="@style/MainButton"
        android:text="@string/media"
        app:icon="@drawable/media_icon" />

    <Button
        android:id="@+id/button_settings"
        style="@style/MainButton"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon" />

</LinearLayout>