<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/main_padding_top">

        <ImageView
            android:id="@+id/settings_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/back_arrow"
            android:paddingHorizontal="20dp"
            android:paddingVertical="4dp"
            android:src="@drawable/left_arrow"
            app:tint="?attr/colorOnPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingHorizontal="8dp"
            android:text="@string/settings"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="500"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>


    <FrameLayout
        style="@style/SettingsFrameLayout"
        android:layout_marginTop="40dp"
        android:paddingEnd="18dp">

        <TextView
            style="@style/SettingsTextView"
            android:text="@string/dark_mode" />

        <com.google.android.material.switchmaterial.SwitchMaterial style="@style/SettingsImageViewSwitch" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/share"
        style="@style/SettingsFrameLayout"
        android:paddingEnd="16dp">

        <TextView
            style="@style/SettingsTextView"
            android:text="@string/share" />

        <ImageView
            style="@style/SettingsImageViewSwitch"
            android:contentDescription="@string/share"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/support"
        style="@style/SettingsFrameLayout"
        android:paddingEnd="14dp">

        <TextView
            style="@style/SettingsTextView"
            android:text="@string/support" />

        <ImageView
            style="@style/SettingsImageViewSwitch"
            android:contentDescription="@string/support"
            android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/agreement"
        style="@style/SettingsFrameLayout"
        android:paddingEnd="20dp">

        <TextView
            style="@style/SettingsTextView"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/SettingsImageViewSwitch"
            android:contentDescription="@string/user_agreement"
            android:src="@drawable/right_arrow" />
    </FrameLayout>

</LinearLayout>