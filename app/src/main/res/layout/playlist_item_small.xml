<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlistItemSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPlaylistImageSmall"
        android:layout_width="@dimen/image_track_search"
        android:layout_height="@dimen/image_track_search"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/image_track_margin_v"
        android:contentDescription="@string/playlist_cover"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlaylistNameSmall"
            style="@style/track_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            tools:text="Best songs Best songs Best songs Best songs Best songs Best songs Best songs" />

        <TextView
            android:id="@+id/tvPlaylistSongsNumberSmall"
            style="@style/artist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            tools:text="98 треков" />

    </LinearLayout>

</LinearLayout>