<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation_graph"
    app:startDestination="@id/mediaFragment">

    <fragment
        android:id="@+id/mediaFragment"
        android:name="ru.kryu.playlistmaker.playlist.ui.fragment.MediaFragment"
        android:label="fragment_media"
        tools:layout="@layout/fragment_media" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.kryu.playlistmaker.search.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_audioPlayerActivity"
            app:destination="@id/audioPlayerActivity" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.kryu.playlistmaker.settings.ui.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="ru.kryu.playlistmaker.favourite.ui.fragment.FavouritesFragment"
        android:label="FavouritesFragment" />
    <fragment
        android:id="@+id/playlistsFragment"
        android:name="ru.kryu.playlistmaker.playlist.ui.fragment.PlaylistsFragment"
        android:label="PlaylistsFragment" />
    <activity
        android:id="@+id/audioPlayerActivity"
        android:name="ru.kryu.playlistmaker.player.ui.activity.AudioPlayerActivity"
        android:label="activity_audio_player"
        tools:layout="@layout/activity_audio_player" />
</navigation>