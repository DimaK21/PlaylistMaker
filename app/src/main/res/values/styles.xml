<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/button_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginVertical">@dimen/settings_margin_vert</item>
    </style>

    <style name="SettingsImageViewSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/settings</item>
        <item name="thumbTint">@color/settings</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <style name="SettingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/settings_padding_start</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textColorHint">@color/settings</item>
        <item name="android:backgroundTint">@color/switch_track</item>
        <item name="android:drawableTint">@color/settings</item>
    </style>

    <style name="EditTextClear">
        <item name="tint">@color/settings</item>
        <item name="android:backgroundTint">@color/switch_track</item>
    </style>

    <style name="HeadText">
        <item name="android:paddingTop">@dimen/main_padding_top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingHorizontal">@dimen/margin_back_arrow</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="track_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="artist_text">
        <item name="android:textColor">@color/settings</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_artist_search</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="search_placeholder_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/search_placeholder_margin_top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="search_placeholder_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/search_placeholder_tv_margin_top</item>
        <item name="android:layout_marginHorizontal">
            @dimen/search_placeholder_tv_margin_horizontal
        </item>
        <item name="android:layout_marginBottom">@dimen/search_placeholder_tv_margin_bottom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_placeholder_tv_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="button_refresh" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/search_placeholder_button_text</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/settings</item>
    </style>

    <style name="player_track_info_left">
        <item name="android:layout_marginTop">@dimen/margin_back_arrow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/settings</item>
    </style>

    <style name="player_track_info_right" parent="player_track_info_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="tab_layout_text" parent="@style/Widget.Material3.TabLayout">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_placeholder_button_text</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="bottom_navigation_bar">
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemTextAppearanceInactive">@style/text_bottom_navigation</item>
        <item name="itemTextAppearanceActive">@style/text_bottom_navigation</item>
    </style>

    <style name="text_bottom_navigation">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="HeadTextNewPlaylist">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="TextInputLayoutNewPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/button_top</item>
        <item name="android:layout_marginEnd">@dimen/button_top</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">@color/main_background</item>
        <item name="hintTextAppearance">@style/text_label_new_playlist</item>
        <item name="android:textAppearance">@style/text_new_playlist</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextNewPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/button_top</item>
        <item name="android:paddingEnd">@dimen/button_top</item>
        <item name="android:paddingTop">@dimen/margin_18</item>
        <item name="android:paddingBottom">@dimen/margin_18</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="text_new_playlist">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="text_label_new_playlist">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="CreatePlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/button_top</item>
        <item name="android:layout_marginEnd">@dimen/button_top</item>
        <item name="android:layout_marginTop">@dimen/button_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_32</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corners_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/text_button_new_playlist</item>
    </style>

    <style name="text_button_new_playlist">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main_background</item>
    </style>

    <style name="text_info_playlist">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:layout_marginStart">@dimen/main_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/image_track_margin_v</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="text_name_playlist">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_28</item>
        <item name="android:layout_marginStart">@dimen/main_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/search_margin_top</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

</resources>