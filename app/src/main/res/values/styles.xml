<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/button_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginVertical">@dimen/settings_margin_vert</item>
    </style>

    <style name="SettingsImageViewSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/settings</item>
        <item name="thumbTint">@color/settings</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <style name="SettingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/settings_padding_start</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textColorHint">@color/settings</item>
        <item name="android:backgroundTint">@color/switch_track</item>
        <item name="android:drawableTint">@color/settings</item>
    </style>

    <style name="EditTextClear">
        <item name="tint">@color/settings</item>
        <item name="android:backgroundTint">@color/switch_track</item>
    </style>

    <style name="HeadLinerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/main_padding_top</item>
    </style>

    <style name="HeadText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="HeadImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentDescription">@string/back_arrow</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:src">@drawable/left_arrow</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="track_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="artist_text">
        <item name="android:textColor">@color/settings</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_artist_search</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="search_placeholder_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/search_placeholder_margin_top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="search_placeholder_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/search_placeholder_tv_margin_top</item>
        <item name="android:layout_marginHorizontal">@dimen/search_placeholder_tv_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/search_placeholder_tv_margin_bottom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_placeholder_tv_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="button_refresh" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/search_placeholder_button_text</item>
    </style>

    <style name="player_track_info_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_back_arrow</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/settings</item>
    </style>

</resources>